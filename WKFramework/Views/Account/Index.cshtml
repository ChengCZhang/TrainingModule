@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap Login Form Template</title>
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <style>
        body {
            font-family: Helvetica, Arial, sans-serif;
            line-height: 1.3em;
            -webkit-font-smoothing: antialiased;
        }

        .logindev {
            position: absolute;
            top: 50%;
            -webkit-transform: translateY(-50%);
            -moz-transform: translateY(-50%);
            -ms-transform: translateY(-50%);
            -o-transform: translateY(-50%);
            transform: translateY(-50%);
        }
    </style>
</head>

<body>
    <!-- Top content -->
    <div class="">
        <div class="">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-lg-offset-3 col-md-5 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12   logindev">
                        <div class="panel panel-default" style="opacity: 0.85">
                            <div class="panel-body" style="text-align: center; padding-bottom:10px;padding-top:10px;background-color: #ccc;">                              
                                    <img src="~/Content/Images/4.jpg" class="img-circle img-thumbnail" width="80" height="80" />
                            </div>
                            <div class="panel-body" style="padding-top:5px">
                                <form role="form" action="" method="post" class="">
                                    <p>Enter your username and password to log on:</p>
                                    <div class="form-group input-group">
                                        @*<label class="sr-only" for="form-username">Username</label>*@
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-user"></span></button>
                                        </span>
                                        <input type="text" name="form-username" placeholder="Username..." class="form-username form-control" id="form-username">
                                    </div>
                                    <div class="form-group input-group">
                                        @*<label class="sr-only" for="form-password">Password</label>*@
                                        <span class="input-group-btn">
                                            <button type="button" class="btn btn-default"><span class="glyphicon glyphicon-eye-close"></span></button>
                                        </span>
                                        <input type="password" name="form-password" placeholder="Password..." class="form-password form-control" id="form-password">
                                    </div>
                                    <button type="submit" class="btn btn-primary" style="float:right">Sign in!</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/JQuery/jquery.js"></script>
    <script src="~/Scripts/JQuery/jquery.backstretch.js"></script>
    <script>
        $(function () {
            $.backstretch([
                  "../../Content/Images/1.jpg",
                  "../../Content/Images/3.jpeg"
            ], { duration: 4000, fade: 750 });
        });
    </script>
</body>

</html>
